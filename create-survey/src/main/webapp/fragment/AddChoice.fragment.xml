<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<Dialog title="{i18n>addChoice}">
		<content>


				<f:SimpleForm
					editable="true">
					<f:content>
						<TextArea
							value="{baseModel>/newChoice}"
							valueState="{vsModel>/newChoice}"
							valueStateText="{i18n>vstNewChoice}"
							width="100%"
							rows="8"/>
					</f:content>
				</f:SimpleForm>

		</content>
		<beginButton>
			<Button
				text="{i18n>okButton}"
				press="onOkButton" />
		</beginButton>
		<endButton>
			<Button
				text="{i18n>cancelButton}"
				press="onCancelButton" />
		</endButton>
	</Dialog>

</core:FragmentDefinition>